{
  "compilerOptions": {
    "outDir": "./temp",
    // "target": "es5",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    // "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    //"strict": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": false,
    "downlevelIteration": true
  },
  "include": ["src/AppointmentPicker"],
  "exclude": [
    "node_modules",
    "src/**/*.test.tsx",
    "build",
    "dist",
    "example",
    "rollup.config.js"
  ]
}
